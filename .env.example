# Development environment example for Vibebox
# Copy to `.env.local` and update values before running locally

# Database (Postgres)
DATABASE_URL="postgresql://user:password@localhost:5432/vibebox_db"

# JWT secret (use a strong secret in production)
JWT_SECRET="dev-jwt-secret-change-me-to-a-secure-value-in-prod"

# AWS S3 (optional)
AWS_REGION="ap-northeast-2"
AWS_ACCESS_KEY_ID="your-key"
AWS_SECRET_ACCESS_KEY="your-secret"
S3_BUCKET="your-bucket"

# CDN
CDN_BASE_URL="https://cdn.yourdomain.com"

# Public base url
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Admin initial account (for seeding / local dev only)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="strong-initial-password-123"

# Development convenience flags
# When DEV_LOGIN=true the app will allow a dev fallback login if the DB isn't present.
# When DEV_EVAL=true the app will include 'unsafe-eval' in the CSP script-src (DEVELOPMENT ONLY).
DEV_LOGIN=true
DEV_EVAL=false
